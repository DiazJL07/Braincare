<!-- Modal para Crear Artículo -->
<div id="articleModal" class="article-modal">
  <div class="article-modal-content">
    <div class="article-modal-header">
      <h2 class="article-modal-title">
        <i class="fas fa-newspaper"></i>
        Crear Nuevo Artículo
      </h2>
      <button class="article-modal-close" onclick="closeArticleModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    
    <div class="article-modal-body">
      <form id="articleForm" enctype="multipart/form-data">
        <div class="article-form-row">
          <div class="article-form-group">
            <label for="articleTitle" class="article-form-label">
              <i class="fas fa-heading"></i>
              Título del Artículo
            </label>
            <input type="text" id="articleTitle" name="title" class="article-form-input" placeholder="Ingresa el título del artículo" required>
          </div>
        </div>
        
        <div class="article-form-row">
          <div class="article-form-group">
            <label for="articleTopic" class="article-form-label">
              <i class="fas fa-tags"></i>
              Tema
            </label>
            <select id="articleTopic" name="topic" class="article-form-select" required>
              <option value="" disabled selected>Selecciona un tema</option>
              <option value="Transtornos">Transtornos</option>
              <option value="Recomendaciones">Recomendaciones</option>
              <option value="Tratamientos">Tratamientos</option>
              <option value="Prevencion">Prevención</option>
              <option value="Investigacion">Investigación</option>
            </select>
          </div>
        </div>
        
        <div class="article-form-row">
          <div class="article-form-group">
            <label for="articleContent" class="article-form-label">
              <i class="fas fa-edit"></i>
              Contenido
            </label>
            <textarea id="articleContent" name="content" class="article-form-textarea" rows="8" placeholder="Escribe el contenido del artículo..." required></textarea>
            <small class="article-form-help">Puedes usar HTML para dar formato al contenido.</small>
          </div>
        </div>
        
        <div class="article-form-row">
          <div class="article-form-group">
            <label for="articleImage" class="article-form-label">
              <i class="fas fa-image"></i>
              Imagen (Opcional)
            </label>
            <div class="article-file-upload">
              <input type="file" id="articleImage" name="image" class="article-file-input" accept="image/*">
              <label for="articleImage" class="article-file-label">
                <i class="fas fa-cloud-upload-alt"></i>
                <span>Seleccionar imagen</span>
              </label>
              <div id="articleImagePreview" class="article-file-preview"></div>
            </div>
          </div>
        </div>
        
        <div class="article-modal-actions">
          <button type="button" class="article-btn article-btn-secondary" onclick="closeArticleModal()">
            <i class="fas fa-times"></i>
            Cancelar
          </button>
          <button type="submit" class="article-btn article-btn-primary" id="submitArticleBtn">
            <i class="fas fa-save"></i>
            <span>Crear Artículo</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

