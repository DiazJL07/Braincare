<script>
  document.addEventListener('DOMContentLoaded', function(){
    var btn = document.getElementById('guidesFilterButton');
    var menu = document.getElementById('guidesFilterMenu');
    if (btn && menu) {
      btn.addEventListener('click', function(e){
        e.preventDefault(); e.stopPropagation();
        menu.style.display = (menu.style.display === 'none' || !menu.style.display) ? 'block' : 'none';
      });
      document.addEventListener('click', function(e){
        if (!menu.contains(e.target) && !btn.contains(e.target)) {
          menu.style.display = 'none';
        }
      });
    }
  });
  function applyGuidesFilters(){
    var t = document.getElementById('guidesTopicFilter').value;
    var a = document.getElementById('guidesAuthorFilter').value;
    var q = document.getElementById('guidesQ').value;
    var f = document.getElementById('guidesFrom').value;
    var to = document.getElementById('guidesTo').value;
    var url = '/guides/admin/dashboard?topic=' + encodeURIComponent(t) + '&author=' + encodeURIComponent(a) + '&q=' + encodeURIComponent(q) + '&from=' + encodeURIComponent(f) + '&to=' + encodeURIComponent(to);
    window.location.href = url;
  }
  function confirmDeleteGuide(guideId, guideTitle) {
    document.getElementById('guideTitle').textContent = guideTitle;
    document.getElementById('deleteGuideForm').action = `/guides/admin/${guideId}/delete`;
    
    // Mostrar el modal nativo con animación
    const modal = document.getElementById('deleteGuideModal');
    modal.style.display = 'flex';
    modal.style.opacity = '0';
    
    setTimeout(() => {
      modal.style.opacity = '1';
    }, 10);
  }
  
  // Cerrar el modal cuando se hace clic en el botón de cerrar o cancelar
  document.querySelectorAll('[data-bs-dismiss="modal"]').forEach(button => {
    button.addEventListener('click', function() {
      const modal = document.getElementById('deleteGuideModal');
      modal.style.opacity = '0';
      
      setTimeout(() => {
        modal.style.display = 'none';
      }, 300);
    });
  });
  
  // Cerrar modal al hacer clic fuera de él
  document.getElementById('deleteGuideModal').addEventListener('click', function(e) {
    if (e.target === this) {
      const modal = this;
      modal.style.opacity = '0';
      
      setTimeout(() => {
        modal.style.display = 'none';
      }, 300);
    }
  });
</script>

