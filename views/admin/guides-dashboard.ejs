<!-- Modal para crear nueva guía -->
<div id="guideModal" class="guide-modal">
  <div class="guide-modal-content">
    <div class="guide-modal-header">
      <h2 class="guide-modal-title">
        <i class="fas fa-book-open"></i>
        Nueva Guía de Psicología
      </h2>
      <button type="button" class="guide-modal-close" onclick="closeGuideModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="guide-modal-body">
      <form id="guideForm" action="/guides/admin" method="POST" enctype="multipart/form-data">
        <div class="guide-form-row">
          <!-- Columna izquierda: Información básica -->
          <div class="guide-form-column">
            <div class="guide-form-group">
              <label for="guideTitle" class="guide-form-label">
                <i class="fas fa-heading"></i>
                Título de la Guía
              </label>
              <input type="text" class="guide-form-input" id="guideTitle" name="title" placeholder="Ingresa el título de la guía" required>
            </div>
            
            <div class="guide-form-group">
              <label for="guideTopic" class="guide-form-label">
                <i class="fas fa-tags"></i>
                Categoría
              </label>
              <select class="guide-form-select" id="guideTopic" name="topic" required>
                <option value="" disabled selected>Selecciona una categoría</option>
                <option value="Transtornos">Transtornos</option>
                <option value="Recomendaciones">Recomendaciones</option>
                <option value="Tratamientos">Tratamientos</option>
                <option value="Prevencion">Prevención</option>
                <option value="Investigacion">Investigación</option>
              </select>
            </div>
          </div>
          
          <!-- Columna derecha: Archivos -->
          <div class="guide-form-column">
            <div class="guide-form-group">
              <label for="guideImage" class="guide-form-label">
                <i class="fas fa-image"></i>
                Imagen de Portada
              </label>
              <div class="guide-file-upload">
                <input type="file" class="guide-form-file" id="guideImage" name="image" accept="image/*">
                <div class="guide-file-preview" id="imagePreview">
                  <i class="fas fa-cloud-upload-alt"></i>
                  <span>Arrastra una imagen o haz clic para seleccionar</span>
                  <small>Máximo 5MB - JPG, PNG, GIF</small>
                </div>
              </div>
            </div>
            
            <div class="guide-form-group">
              <label for="guidePdf" class="guide-form-label">
                <i class="fas fa-file-pdf"></i>
                Archivo PDF (Requerido)
              </label>
              <div class="guide-file-upload">
                <input type="file" class="guide-form-file" id="guidePdf" name="pdfFile" accept="application/pdf" required>
                <div class="guide-file-preview" id="pdfPreview">
                  <i class="fas fa-file-pdf"></i>
                  <span>Selecciona el archivo PDF de la guía</span>
                  <small>Máximo 10MB - Solo archivos PDF</small>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="guide-form-actions">
          <button type="button" class="guide-btn guide-btn-cancel" onclick="closeGuideModal()">
            <i class="fas fa-times"></i>
            Cancelar
          </button>
          <button type="submit" class="guide-btn guide-btn-primary">
            <i class="fas fa-save"></i>
            Crear Guía
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

