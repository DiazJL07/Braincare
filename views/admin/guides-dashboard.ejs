 

<link rel="stylesheet" href="/css/dashboard-general.css">

<div class="gen-dash-wrapper animate-fade-in">
  
  <div class="gen-header-row">
    <div>
      <h1 class="gen-page-title">Panel de Administración de Guías</h1>
      <p class="gen-page-subtitle">Gestiona y supervisa todas las guías de psicología</p>
    </div>
    <div class="gen-header-actions">
      <button type="button" class="gen-btn gen-btn-primary" onclick="openGuideModal()">
        <i class="fas fa-plus"></i> Nueva Guía
      </button>
    </div>
  </div>

  <div class="gen-panel">
    <div class="gen-filter-container">
      <div class="gen-filter-header">
        <h2 class="gen-filter-title">
          <i class="fas fa-filter" style="color: var(--gen-text-secondary);"></i>
          Filtros y Búsqueda
        </h2>
        <button class="gen-btn gen-btn-ghost guides-filters-toggle">
          <i class="fas fa-cog"></i> Filtros Avanzados
        </button>
      </div>

      <div class="gen-filter-grid">
        <div class="gen-form-group">
          <label class="gen-label"><i class="fas fa-search"></i> Buscar Guías</label>
          <input type="text" class="gen-input" id="guidesSearchInput" 
                 placeholder="Buscar por título, autor..." onkeyup="filterGuides()">
        </div>

        <div class="gen-form-group">
          <label for="guidesTopicFilter" class="gen-label"><i class="fas fa-tag"></i> Categoría</label>
          <select class="gen-select" id="guidesTopicFilter" onchange="filterGuides()">
            <option value="all">Todas las categorías</option>
            <% if (typeof allCategories !== 'undefined' && allCategories && allCategories.length > 0) { %>
              <% allCategories.forEach(category => { %>
                <option value="<%= category %>"><%= category %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
      </div>

      <div class="gen-advanced-filters" id="guidesAdvancedFilters">
        <div class="gen-filter-grid">
          
          <div class="gen-form-group">
            <label class="gen-label"><i class="fas fa-calendar-alt"></i> Fecha de Publicación</label>
            <div class="gen-date-range">
              <input type="date" class="gen-input" id="guidesDateFrom" onchange="filterGuides()">
              <span style="color:var(--gen-text-secondary)">a</span>
              <input type="date" class="gen-input" id="guidesDateTo" onchange="filterGuides()">
            </div>
          </div>

          <div class="gen-form-group">
            <label class="gen-label"><i class="fas fa-eye"></i> Rango de Vistas</label>
            <div class="gen-date-range">
              <input type="number" class="gen-input" id="guidesViewsMin" placeholder="Mín" onchange="filterGuides()">
              <input type="number" class="gen-input" id="guidesViewsMax" placeholder="Máx" onchange="filterGuides()">
            </div>
          </div>

          <div class="gen-form-group">
            <label class="gen-label"><i class="fas fa-user-edit"></i> Autor</label>
            <select class="gen-select" id="guidesAuthorFilter" onchange="filterGuides()">
              <option value="">Todos los autores</option>
              <% if (guides && guides.length > 0) { %>
                <% const uniqueAuthors = [...new Set(guides.map(guide => guide.author ? guide.author.name : 'Desconocido'))]; %>
                <% uniqueAuthors.forEach(author => { %>
                  <option value="<%= author %>"><%= author %></option>
                <% }); %>
              <% } %>
            </select>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="gen-panel" style="padding:0;">
    <div class="gen-table-header">
      <h2 class="gen-filter-title">
        <i class="fas fa-list" style="color: var(--gen-accent);"></i>
        Listado de Guías
      </h2>
    </div>

    <div class="gen-table-responsive">
      <table class="gen-table">
        <thead>
          <tr>
            <th>Título</th>
            <th>Categoría</th>
            <th>Autor</th>
            <th>Fecha</th>
            <th>Vistas</th>
            <th>Descargas</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (guides && guides.length > 0) { %>
            <% guides.forEach(guide => { %>
              <tr data-guide-id="<%= guide._id %>" class="guides-table-row">
                <td>
                  <div style="display:flex; gap: 1rem; align-items:center;">
                    <% if (guide.thumbnail) { %>
                      <img src="<%= guide.thumbnail %>" alt="<%= guide.title %>" class="gen-thumbnail">
                    <% } else { %>
                      <div class="gen-thumbnail">
                        <i class="fas fa-book"></i>
                      </div>
                    <% } %>
                    <div>
                      <a href="/guides/<%= guide._id %>" class="gen-link-primary" target="_blank">
                        <%= guide.title %>
                      </a>
                      
                    </div>
                  </div>
                </td>
                
                <td>
                  <span class="gen-badge gen-badge-neutral"><%= guide.topic %></span>
                  <% if (guide.featured) { %>
                    <span class="gen-badge gen-badge-info" style="margin-left:0.25rem;">Destacado</span>
                  <% } %>
                </td>

                <td>
                  <div class="gen-user-cell">
                    <div class="gen-avatar-circle">
                      <%= guide.author ? guide.author.name.charAt(0).toUpperCase() : 'U' %>
                    </div>
                    <div style="display:flex; flex-direction:column; line-height:1.2;">
                      <span style="font-weight:500;"><%= guide.author ? guide.author.name : 'Desconocido' %></span>
                      <small style="color:var(--gen-text-secondary);"><%= guide.author && guide.author.role ? guide.author.role : 'Autor' %></small>
                    </div>
                  </div>
                </td>

                <td>
                  <%= new Date(guide.publicationDate).toLocaleDateString('es-ES', { year:'numeric', month:'short', day:'numeric' }) %>
                </td>

                <td>
                  <div style="display:flex; align-items:center; gap:0.5rem; color:var(--gen-text-body);">
                    <i class="fas fa-eye" style="color:var(--gen-text-secondary);"></i> <%= guide.views || 0 %>
                  </div>
                </td>
                <td>
                  <div style="display:flex; align-items:center; gap:0.5rem; color:var(--gen-text-body);">
                    <i class="fas fa-download" style="color:var(--gen-text-secondary);"></i> <%= guide.downloads || 0 %>
                  </div>
                </td>

                <td>
                  <div class="gen-action-group">
                    <a href="/guides/<%= guide._id %>" 
                       class="gen-action-btn-sm" 
                       target="_blank"
                       title="Ver guía">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/guides/admin/<%= guide._id %>/edit" 
                       class="gen-action-btn-sm"
                       title="Editar guía">
                      <i class="fas fa-edit"></i>
                    </a>
                    <button type="button" 
                            class="gen-action-btn-sm delete" 
                            onclick="confirmDeleteGuide('<%= guide._id %>', '<%= guide.title %>')"
                            title="Eliminar guía">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="7" style="text-align:center; padding: 4rem;">
                <div style="color: var(--gen-text-secondary);">
                  <i class="fas fa-book-open" style="font-size: 3rem; margin-bottom: 1rem; color: #d1d5db;"></i>
                  <h3>No hay guías disponibles</h3>
                  <p>Comienza creando tu primera guía para compartir conocimiento.</p>
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <div id="guidesPagination" class="gen-pagination"></div>

