<%- include('../partials/header', { title: 'Administración de Guías' }) %>
<link rel="stylesheet" href="/css/admin-guides-dashboard.css">
<link rel="stylesheet" href="/css/admin-articles-dashboard.css">
<link rel="stylesheet" href="/css/admin-responsive.css">
<script src="/js/admin-guides-dashboard.js"></script>
<style>
  body{
    padding-top: 5%;
  }
</style>

<div class="guides-admin-dashboard">
  <div class="guides-dashboard-header">
    <h1>Panel de Administración de Guías</h1>
    <p class="subtitle">Gestiona y supervisa todas las guías de psicología</p>
    <div class="guides-header-actions">
      <button type="button" class="guides-action-btn" onclick="openGuideModal()">
        <i class="fas fa-plus"></i> Nueva Guía
      </button>
    </div>
  </div>
  

  <!-- Contenido Principal -->
  <div class="guides-main-content">
    <div class="guides-content-header">
      <h2 class="guides-content-title">Gestión de Guías</h2>
    </div>
    
    <!-- Filtros y Controles -->
    <div class="articles-filters-section">
      <div class="articles-filters-header">
        <h2 class="articles-filters-title">
          <i class="fas fa-filter"></i>
          Filtros y Búsqueda
        </h2>
        <button class="articles-filters-toggle guides-filters-toggle">
          <i class="fas fa-cog"></i>
          Filtros Avanzados
        </button>
      </div>
      
      <div class="articles-filters-grid">
        <div class="articles-filter-group">
          <label class="articles-filter-label">
            <i class="fas fa-search"></i>
            Buscar Guías
          </label>
          <input type="text" 
                class="articles-filter-input" 
                id="guidesSearchInput" 
                placeholder="Buscar por título, autor o contenido..."
                onkeyup="filterGuides()">
        </div>
        
        <div class="articles-filter-group">
          <label for="guidesTopicFilter" class="articles-filter-label">
            <i class="fas fa-tag me-1"></i> Filtrar por categoría:
          </label>
          <select class="articles-filter-select" id="guidesTopicFilter" onchange="filterGuides()">
            <option value="all">Todas las categorías</option>
            <% if (typeof allCategories !== 'undefined' && allCategories && allCategories.length > 0) { %>
              <% allCategories.forEach(category => { %>
                <option value="<%= category %>"><%= category %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
        
        
      </div>
      
      <div class="articles-advanced-filters" id="guidesAdvancedFilters" style="display:none;">
        <div class="articles-advanced-grid">
          <div class="articles-filter-group">
            <label class="articles-filter-label">
              <i class="fas fa-calendar-alt"></i>
              Fecha de Publicación
            </label>
            <div class="articles-date-range">
              <input type="date" class="articles-filter-input" id="guidesDateFrom" onchange="filterGuides()">
              <span class="articles-date-separator">hasta</span>
              <input type="date" class="articles-filter-input" id="guidesDateTo" onchange="filterGuides()">
            </div>
          </div>
          
          <div class="articles-filter-group">
            <label class="articles-filter-label">
              <i class="fas fa-eye"></i>
              Rango de Vistas
            </label>
            <div class="articles-range-inputs">
              <input type="number" class="articles-filter-input" id="guidesViewsMin" placeholder="Mín" onchange="filterGuides()">
              <input type="number" class="articles-filter-input" id="guidesViewsMax" placeholder="Máx" onchange="filterGuides()">
            </div>
          </div>
          
          <div class="articles-filter-group">
            <label class="articles-filter-label">
              <i class="fas fa-user-edit"></i>
              Autor
            </label>
            <select class="articles-filter-select" id="guidesAuthorFilter" onchange="filterGuides()">
              <option value="">Todos los autores</option>
              <% if (guides && guides.length > 0) { %>
                <% const uniqueAuthors = [...new Set(guides.map(guide => guide.author ? guide.author.name : 'Desconocido'))]; %>
                <% uniqueAuthors.forEach(author => { %>
                  <option value="<%= author %>"><%= author %></option>
                <% }); %>
              <% } %>
            </select>
          </div>
        </div>
      </div>
    </div>
    
    
    
      <div class="guides-table-container">
      <table class="guides-table">
        <thead>
          <tr>
            <th>Título</th>
            <th>Categoría</th>
            <th>Autor</th>
            <th>Fecha</th>
            <th>Vistas</th>
            <th>Descargas</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (guides && guides.length > 0) { %>
            <% guides.forEach(guide => { %>
              <tr data-guide-id="<%= guide._id %>" class="guides-table-row">
                <td>
                  <div class="guides-info">
                    <% if (guide.thumbnail) { %>
                      <img src="<%= guide.thumbnail %>" alt="<%= guide.title %>" class="guides-thumbnail">
                    <% } else { %>
                      <div class="guides-thumbnail" style="background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600;">
                        <i class="fas fa-book"></i>
                      </div>
                    <% } %>
                    <div class="guides-details">
                      <h4>
                        <a href="/guides/<%= guide._id %>" class="guides-title-link" target="_blank">
                          <%= guide.title %>
                        </a>
                      </h4>
                      <p>
                        <i class="fas fa-clock guides-reading-time-icon"></i>
                        <span class="guides-reading-time">Lectura: ~<%= Math.ceil((guide.content ? guide.content.length : 1000) / 200) %> min</span>
                      </p>
                      <div class="guides-content-tags">
                        <% if (guide.tags && guide.tags.length > 0) { %>
                          <% guide.tags.slice(0, 3).forEach(tag => { %>
                            <span class="guides-content-tag"><%= tag %></span>
                          <% }); %>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="guides-category-badge"><%= guide.topic %></span>
                  <% if (guide.featured) { %>
                    <span class="guides-featured-badge">Destacado</span>
                  <% } %>
                </td>
                <td>
                  <div class="guides-author-info">
                    <div class="guides-author-avatar">
                      <%= guide.author ? guide.author.name.charAt(0).toUpperCase() : 'U' %>
                    </div>
                    <div class="guides-author-details">
                      <span class="guides-author-name">
                        <%= guide.author ? guide.author.name : 'Desconocido' %>
                      </span>
                      <span class="guides-author-role">
                        <%= guide.author && guide.author.role ? guide.author.role : 'Autor' %>
                      </span>
                    </div>
                  </div>
                </td>
                <td class="guides-date-cell">
                  <div class="guides-date-info">
                    <span class="guides-date-main">
                      <%= new Date(guide.publicationDate).toLocaleDateString('es-ES', { 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric' 
                      }) %>
                    </span>
                    <span class="guides-date-time">
                      <%= new Date(guide.publicationDate).toLocaleTimeString('es-ES', { 
                        hour: '2-digit', 
                        minute: '2-digit' 
                      }) %>
                    </span>
                  </div>
                </td>
                <td class="guides-stats-cell">
                  <div class="guides-stat-item">
                    <i class="fas fa-eye"></i>
                    <span><%= guide.views || 0 %></span>
                  </div>
                  <!-- Barra de popularidad -->
                  
                </td>
                <td class="guides-stats-cell">
                  <div class="guides-stat-item">
                    <i class="fas fa-download"></i>
                    <span><%= guide.downloads || 0 %></span>
                  </div>
                  <!-- Barra de popularidad -->
                  
                </td>
                <td>
                  <div class="guides-actions-group">
                    <a href="/guides/<%= guide._id %>" 
                       class="guides-action-button guides-btn-view" 
                       target="_blank"
                       data-tooltip="Ver guía"
                       data-id="<%= guide._id %>">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/guides/admin/<%= guide._id %>/edit" 
                       class="guides-action-button guides-btn-edit"
                       data-tooltip="Editar guía"
                       data-id="<%= guide._id %>">
                      <i class="fas fa-edit"></i>
                    </a>
                    <button type="button" 
                            class="guides-action-button guides-btn-delete" 
                            data-tooltip="Eliminar guía"
                            data-id="<%= guide._id %>"
                            data-name="<%= guide.title %>">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="7" class="guides-empty-state">
                <div class="guides-empty-content">
                  <div class="guides-empty-illustration">
                    <div class="guides-empty-circle">
                      <i class="fas fa-book-open guides-empty-icon"></i>
                    </div>
                    <div class="guides-empty-dots">
                      <span></span>
                      <span></span>
                      <span></span>
                    </div>
                  </div>
                  <h3>No hay guías disponibles</h3>
                  <p>Comienza creando tu primera guía para compartir conocimiento con la comunidad. Las guías son una excelente manera de educar y ayudar a otros usuarios.</p>
                 
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="articles-pagination" id="guidesPagination"></div>

<!-- Modal de confirmación nativo -->
<div class="guides-delete-modal" id="deleteGuideModal" style="display: none;">
  <div class="guides-modal-content">
    <div class="guides-modal-header">
      <div class="guides-modal-icon">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <h3 class="guides-modal-title">Confirmar Eliminación</h3>
      <button type="button" class="guides-modal-close" data-bs-dismiss="modal">
        <i class="fas fa-times"></i>
      </button>
    </div>
    
    <div class="guides-modal-body">
      <p class="guides-modal-message">
        ¿Estás seguro de que deseas eliminar la guía 
        <strong class="guide-name" id="guideTitle"></strong>?
      </p>
      <p class="guides-modal-warning">
        <i class="fas fa-info-circle"></i>
        Esta acción no se puede deshacer y se perderán todos los datos asociados.
      </p>
    </div>
    
    <div class="guides-modal-footer">
      <button type="button" class="guides-modal-btn guides-btn-cancel" data-bs-dismiss="modal">
        <i class="fas fa-times"></i> Cancelar
      </button>
      <form id="deleteGuideForm" method="POST" action="" style="display: inline;">
        <button type="submit" class="guides-modal-btn guides-btn-confirm">
          <i class="fas fa-trash"></i> Eliminar Guía
        </button>
      </form>
    </div>
  </div>
</div>

