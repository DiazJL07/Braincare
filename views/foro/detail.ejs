 
<link rel="stylesheet" href="/css/ForoDetail.css">
<script src="/js/strip-inline-styles.js" defer></script>



<div class="nx-core-wrapper">
  
  <div class="nx-central-column">

    <div class="nx-nav-header">
      <a href="/foro" class="nx-btn-ghost-back">
        <i class="fas fa-arrow-left"></i> Regresar al foro
      </a>
      
      <nav aria-label="breadcrumb">
        <ol class="nx-breadcrumbs-list">
          <li><a href="/">Inicio</a></li>
          <li>/</li>
          <li><a href="/foro">Foro</a></li>
          <li>/</li>
          <li class="nx-crumb-active" aria-current="page"><%= foro.title %></li>
        </ol>
      </nav>
      
      <div id="alertContainer"></div>
    </div>

    <article class="nx-article-card">
      
      <% if (foro.image) { %>
        <div class="nx-hero-img-container">
          <img src="<%= foro.image %>" class="nx-hero-img" alt="<%= foro.title %>">
          <div class="nx-hero-overlay"></div>
        </div>
      <% } %>

      <div class="nx-article-body">
        <div class="nx-topic-wrapper">
          <span class="nx-topic-pill">
            <%= (foro.topic && foro.topic.name) ? foro.topic.name : 'General' %>
          </span>
        </div>

        <h1 class="nx-headline"><%= foro.title %></h1>

        <div class="nx-meta-row">
          <div class="nx-meta-item">
             <span>Publicado el</span>
             <%= new Date(foro.publicationDate).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' }) %>
           </div>
           <span>•</span>
           <div class="nx-meta-item">
             <i class="fas fa-comments"></i>
             <span class="nx-stat-value"><%= foro.comments ? foro.comments.length : 0 %></span>
           </div>
           <span>•</span>
           <div class="nx-meta-item">
            <span class="nx-stat-value"><%= foro.views %></span>
              <span>Vistas</span>
             
           </div>
           
        </div>

        <div class="nx-content-renderer">
          <%- foro.content %>
        </div>

        <div class="nx-action-dock">
          <button class="nx-btn-action <%= (user && foro.likes && foro.likes.some(function(x){ return x.toString() === user._id.toString(); })) ? 'nx-btn-like-active' : 'nx-btn-like-outline' %> like-btn" data-post-id="<%= foro._id %>">
            <i class="fas fa-heart"></i>
           
            <span style="margin-left: 6px;">Me gusta (<span class="likes-count"><%= foro.likes ? foro.likes.length : 0 %></span>)</span>
          </button>

          <% if (user && foro.author && user._id.toString() !== foro.author._id.toString()) { %>
            <button class="nx-btn-action nx-btn-warn report-btn" data-post-id="<%= foro._id %>" data-content-type="foro" title="Reportar" data-bs-toggle="modal" data-bs-target="#reportModal">
              <i class="fas fa-flag"></i> Reportar
            </button>
          <% } %>

          <% if (user && user.role === 'admin') { %>
            <button class="nx-btn-action nx-btn-destruct" onclick="confirmDeleteForoDetail('<%= foro._id %>', '<%= foro.title %>')">
              <i class="fas fa-trash"></i> Eliminar
            </button>
          <% } %>
        </div>

      </div>
    </article>

    <div class="nx-comments-wrapper">
      
      <div class="nx-comments-header">
        <h3 class="nx-sec-title">
          Comentarios <span class="nx-count-bubble"><%= foro.comments ? foro.comments.length : 0 %></span>
        </h3>
        <small style="color: var(--nx-text-sec);">Únete a la charla</small>
      </div>

      <div class="nx-compose-box">
        <% if (user) { %>
          <form id="main-comment-form" action="/foro/<%= foro._id %>/comments" method="POST">
            <div class="nx-user-mini-header">
               <% if (user.profileImage) { %>
                  <img src="<%= user.profileImage %>" class="nx-avatar-circle" alt="Tú">
               <% } else { %>
                  <div class="nx-avatar-placeholder"><i class="fas fa-user"></i></div>
               <% } %>
               <span style="font-weight: 600; color: var(--nx-primary);"><%= user.name %></span>
            </div>
            
            <textarea class="nx-textarea-clean" name="content" rows="3" placeholder="Escribe tu opinión aquí..." required></textarea>
            <input type="hidden" name="postId" value="<%= foro._id %>">
            
            <div style="text-align: right;">
              <button type="submit" class="nx-btn-primary-send">
                <i class="fas fa-paper-plane"></i> Publicar
              </button>
            </div>
          </form>
        <% } else { %>
          <div style="text-align: center; padding: 20px;">
            <i class="fas fa-lock" style="color: #cbd5e1; font-size: 2rem; margin-bottom: 10px;"></i>
            <p>Debes iniciar sesión para comentar.</p>
            <a href="/login" class="nx-btn-primary-send" style="text-decoration: none; display: inline-block;">Ingresar</a>
          </div>
        <% } %>
      </div>

      <div class="nx-comments-list">
        <% if (foro.comments && foro.comments.length > 0) { %>
          <% foro.comments.forEach(comment => { %>
            <% if (!comment.isReply) { %>
              
              <div class="nx-comment-node" id="comment-<%= comment._id %>">
                <div class="nx-comment-sidebar">
                  <a href="/user/public/<%= comment.author ? comment.author._id : '#' %>">
                    <% if (comment.author && comment.author.profileImage) { %>
                      <img src="<%= comment.author.profileImage %>" class="nx-avatar-circle">
                    <% } else { %>
                      <div class="nx-avatar-placeholder <%= !comment.author ? 'nx-avatar-deleted' : '' %>">
                        <i class="fas fa-<%= comment.author ? 'user' : 'user-slash' %>"></i>
                      </div>
                    <% } %>
                  </a>
                </div>

                <div class="nx-comment-body-group">
                  <div class="nx-comment-bubble">
                    <div class="nx-comment-meta">
                       <% if (comment.author) { %>
                         <a href="/user/public/<%= comment.author._id %>" class="nx-author-name"><%= comment.author.name %></a>
                       <% } else { %>
                         <span class="nx-author-name" style="color: #9ca3af;">Usuario Eliminado</span>
                       <% } %>
                       <span class="nx-date-txt">• <%= new Date(comment.createdAt).toLocaleDateString() %></span>
                       <% if (comment.edited) { %><small style="color: #d97706;">(Editado)</small><% } %>
                       <% if (user && user.role === 'admin' && comment.author) { %>
                          <form action="/admin/users/<%= comment.author._id %>/ban" method="POST" class="d-inline ban-form">
                            <button type="button" class="nx-tool-btn ban-user-btn" data-user-id="<%= comment.author._id %>" data-user-name="<%= comment.author.name %>" title="Banear">
                               <i class="fas fa-ban"></i>
                            </button>
                          </form>
                       <% } %>
                    </div>

                    <div class="nx-comment-txt"><%= comment.content %></div>
                  </div>

                  <div class="nx-comment-toolbar">
                     <button class="nx-tool-btn like-comment-btn <%= (user && comment.likes && comment.likes.some(function(x){ return x.toString() === user._id.toString(); })) ? 'liked' : '' %>" data-comment-id="<%= comment._id %>">
                        <i class="fas fa-heart"></i> <span class="likes-count"><%= comment.likes ? comment.likes.length : 0 %></span> Me gusta
                     </button>
                     
                     <% if (user) { %>
                        <button class="nx-tool-btn reply-btn" data-comment-id="<%= comment._id %>">
                           <i class="fas fa-reply"></i> Responder
                        </button>
                     <% } %>

                     <% if (user && comment.author && user._id.toString() !== comment.author._id.toString()) { %>
                        <button class="nx-tool-btn report-btn" data-comment-id="<%= comment._id %>" data-content-type="comment" data-bs-toggle="modal" data-bs-target="#reportModal">
                           <i class="fas fa-flag"></i> Reportar
                        </button>
                     <% } %>

                     <% if (user && (user.role === 'admin' || (comment.author && user._id.toString() === comment.author._id.toString()))) { %>
                        <button class="nx-tool-btn delete-comment-btn" data-comment-id="<%= comment._id %>">
                           <i class="fas fa-trash"></i> Eliminar
                        </button>
                     <% } %>
                  </div>

                  <div class="edit-form" id="edit-form-<%= comment._id %>" style="display: none; margin-top: 10px;">
                    <form class="edit-comment-form" action="/foro/<%= foro._id %>/comments/<%= comment._id %>" method="POST" data-comment-id="<%= comment._id %>">
                       <textarea class="nx-textarea-clean" name="content" required><%= comment.content %></textarea>
                       <div style="margin-top: 5px;">
                          <button type="submit" class="nx-btn-primary-send" style="padding: 5px 10px; font-size: 0.8rem;">Guardar</button>
                          <button type="button" class="nx-tool-btn cancel-edit-btn" style="display:inline-block;">Cancelar</button>
                       </div>
                    </form>
                  </div>

                  <div class="reply-form" id="reply-form-<%= comment._id %>" style="display: none; margin-top: 10px;">
                     <form class="reply-comment-form" action="/foro/<%= foro._id %>/comments" method="POST" data-parent-id="<%= comment._id %>">
                        <textarea class="nx-textarea-clean" name="content" placeholder="Escribe tu respuesta..." required></textarea>
                        <input type="hidden" name="postId" value="<%= foro._id %>">
                        <input type="hidden" name="parentCommentId" value="<%= comment._id %>">
                        <div style="margin-top: 5px;">
                           <button type="submit" class="nx-btn-primary-send" style="padding: 5px 10px; font-size: 0.8rem;">Enviar</button>
                           <button type="button" class="nx-tool-btn cancel-reply-btn" style="display:inline-block;">Cancelar</button>
                        </div>
                     </form>
                  </div>

                  <% if (comment.replies && comment.replies.length > 0) { %>
                    <div class="nx-replies-thread">
                      <% comment.replies.forEach(reply => { %>
                        <div class="nx-comment-node" id="reply-<%= reply._id %>" style="margin-bottom: 15px;">
                           
                              <div class="nx-comment-sidebar">
                              <a href="/user/public/<%= reply.author ? reply.author._id : '#' %>">
                                 <% if (reply.author && reply.author.profileImage) { %>
                                    <img src="<%= reply.author.profileImage %>" class="nx-avatar-circle" style="width:30px; height:30px;">
                                 <% } else { %>
                                    <div class="nx-avatar-placeholder <%= !reply.author ? 'nx-avatar-deleted' : '' %>" style="width:30px; height:30px; font-size: 0.8rem;">
                                       <i class="fas fa-<%= reply.author ? 'user' : 'user-slash' %>"></i>
                                    </div>
                                 <% } %>
                              </a>
                              <div class="nx-comment-meta">
                                <% if (reply.author) { %>
                                  <a href="/user/public/<%= reply.author._id %>" class="nx-author-name"><%= reply.author.name %></a>
                                <% } else { %>
                                  <span class="nx-author-name" style="color: #9ca3af;">Usuario Eliminado</span>
                                <% } %>
                                <span class="nx-date-txt">• <%= new Date(reply.createdAt).toLocaleDateString() %></span>
                                <% if (reply.edited) { %><small style="color: #d97706;">(Editado)</small><% } %>
                              </div>
                           </div>

                              <div class="nx-comment-body-group">
                                 <div class="nx-comment-bubble" style="background: #f8fafc;">
                                 <div class="nx-comment-meta">
                                    
                                   
                                 </div>
                                 <div class="nx-comment-txt" style="font-size: 0.9rem;"><%= reply.content %></div>
                              </div>
                              
                              <div class="nx-comment-toolbar">
                                 <button class="nx-tool-btn like-comment-btn <%= (user && reply.likes && reply.likes.some(function(x){ return x.toString() === user._id.toString(); })) ? 'liked' : '' %>" data-comment-id="<%= reply._id %>">
                                    <i class="fas fa-heart"></i> <span class="likes-count"><%= reply.likes ? reply.likes.length : 0 %></span>
                                 </button>
                                 <% if (user && reply.author && user._id.toString() !== reply.author._id.toString()) { %>
                                    <button class="nx-tool-btn report-btn" data-comment-id="<%= reply._id %>" data-content-type="comment" data-bs-toggle="modal" data-bs-target="#reportModal">
                                       <i class="fas fa-flag"></i>
                                    </button>
                                 <% } %>
                                 <% if (user && (user.role === 'admin' || (reply.author && user._id.toString() === reply.author._id.toString()))) { %>
                                    <button class="nx-tool-btn delete-comment-btn" data-comment-id="<%= reply._id %>">
                                       <i class="fas fa-trash"></i>
                                    </button>
                                 <% } %>
                              </div>
                           </div>

                        </div>
                      <% }); %>
                    </div>
                  <% } %>

                </div> </div> <% } %>
          <% }); %>
        <% } else { %>
          <div style="text-align: center; padding: 40px; color: var(--nx-text-sec);">
             <i class="far fa-comments" style="font-size: 2rem; opacity: 0.5;"></i>
             <p>Aún no hay comentarios. ¡Sé el primero!</p>
          </div>
        <% } %>
      </div>

    </div> </div> </div> <div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content nx-modal-content">
      <div class="nx-modal-header">
        <h5 class="nx-sec-title"><i class="fas fa-flag text-warning"></i> Reportar</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="reportForm">
        <div class="nx-modal-body" style="text-align: left;">
           <div style="margin-bottom: 15px;">
             <label class="form-label fw-bold">Razón:</label>
             <select class="form-select" name="reason" required>
               <option value="">Selecciona...</option>
               <option value="Contenido inapropiado">Contenido inapropiado</option>
               <option value="Spam">Spam</option>
               <option value="Acoso o bullying">Acoso o bullying</option>
               <option value="Lenguaje ofensivo">Lenguaje ofensivo</option>
               <option value="Información falsa">Información falsa</option>
               <option value="Violación de términos">Violación de términos</option>
               <option value="Otro">Otro</option>
             </select>
           </div>
           <div>
             <label class="form-label">Detalles:</label>
             <textarea class="form-control" name="description" rows="3"></textarea>
           </div>
        </div>
        <div class="modal-footer border-0">
          <button type="button" class="nx-btn-action nx-btn-like-outline" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="nx-btn-action nx-btn-warn">Enviar Reporte</button>
        </div>
      </form>
    </div>
  </div>
</div>

