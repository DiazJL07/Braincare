<script>
let indiceActual = 0;
const track = document.getElementById("braincareTrack");
const slides = document.querySelectorAll(".braincare-slide-item");
const botones = document.querySelectorAll(".braincare-tab-btn");
const puntos = document.querySelectorAll(".braincare-punto");

function actualizarCarrusel() {
  const slideWidth = slides[0].offsetWidth;
  const gap = 30;
  const desplazamiento = indiceActual * (slideWidth + gap);

  const contenedorAncho = document.querySelector(".braincare-carrusel-wrap").offsetWidth;
  const centrado = (contenedorAncho - slideWidth) / 2;

  track.style.transform = `translateX(-${desplazamiento - centrado}px)`;

  slides.forEach(slide => slide.classList.remove("activo"));
  botones.forEach(btn => btn.classList.remove("activo"));
  puntos.forEach(p => p.classList.remove("activo"));

  slides[indiceActual].classList.add("activo");
  botones[indiceActual].classList.add("activo");
  puntos[indiceActual].classList.add("activo");
}

function moverCarrusel(indice) {
  indiceActual = indice;
  actualizarCarrusel();
}

/* ====== SWIPE MÓVIL ====== */
let startX = 0;
let endX = 0;

track.addEventListener("touchstart", e => {
  startX = e.touches[0].clientX;
});

track.addEventListener("touchend", e => {
  endX = e.changedTouches[0].clientX;
  manejarSwipe();
});

function manejarSwipe() {
  if (startX - endX > 50) {
    if (indiceActual < slides.length - 1) {
      indiceActual++;
      actualizarCarrusel();
    }
  }

  if (endX - startX > 50) {
    if (indiceActual > 0) {
      indiceActual--;
      actualizarCarrusel();
    }
  }
}

/* ====== INICIO ====== */
window.addEventListener("load", actualizarCarrusel);
window.addEventListener("resize", actualizarCarrusel);
</script>



 
