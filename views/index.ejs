<%# Alerta para usuarios baneados comentada %>
<% if (user && user.isBannedUser) { %>
<div class="container mt-4">
    <div class="d-flex align-items-center">
      <div class="me-3">
        <i class="fas fa-ban fa-3x text-danger"></i>
      </div>
      <div class="flex-grow-1">
        <h4 class="alert-heading mb-2">
          <i class="fas fa-exclamation-triangle"></i> Cuenta Suspendida
        </h4>
        <p class="mb-2">
          <strong>Tu cuenta ha sido suspendida</strong>
          <% if (user.banExpiresAt) { %>
            <span class="badge bg-warning text-dark">Temporal</span>
          <% } else { %>
            <span class="badge bg-danger">Permanente</span>
          <% } %>
        </p>
        <% if (user.banReason) { %>
        <p class="mb-2"><strong>Motivo:</strong> <%= user.banReason %></p>
        <% } %>
        <% if (user.banDate) { %>
        <p class="mb-2"><strong>Fecha de suspensión:</strong> <%= new Date(user.banDate).toLocaleDateString('es-ES') %></p>
        <% } %>
        <% if (user.banExpiresAt) { %>
        <p class="mb-2"><strong>Expira el:</strong> <%= new Date(user.banExpiresAt).toLocaleDateString('es-ES') %></p>
        <% } %>
        <hr>
        <p class="mb-0">
          <i class="fas fa-info-circle"></i> 
          No puedes acceder a otras secciones de la plataforma mientras tu cuenta esté suspendida.
          <br>
          <strong>Tu única opción disponible es cerrar sesión.</strong>
        </p>
      </div>
    </div>
    <div class="mt-3 text-end">
      <a href="/auth/logout" class="btn btn-danger">
        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
      </a>
    </div>
  </div>
</div>
<% } %>
