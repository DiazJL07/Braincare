<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BrainCare - <%- typeof title !== 'undefined' ? title : 'Cuidado para tu mente' %></title>
  <!-- CSS Nativo - Sin dependencias externas -->
  <link rel="stylesheet" href="/css/native-grid.css">
  <link rel="stylesheet" href="/css/native-components.css">
  <link rel="stylesheet" href="/css/native-navbar.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  
</head>
<body data-is-admin="<%= typeof user !== 'undefined' && user && user.isAdmin ? 'true' : 'false' %>">
  <%- include('../partials/header') %>

  <!-- Contenido principal -->
  <main>
    <%- body %>
  </main>

  

  <!-- Modal de Baneo -->
  <div class="modal fade" id="banModal" tabindex="-1" aria-labelledby="banModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="banModalLabel">
            <i class="fas fa-ban me-2"></i>Cuenta Suspendida
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="text-center mb-3">
            <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
          </div>
          <h6 class="text-center mb-3">Tu cuenta ha sido suspendida</h6>
          <div id="banDetails">
            <!-- Los detalles del baneo se llenarÃ¡n dinÃ¡micamente -->
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Entendido</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <!-- JavaScript nativo para funcionalidad de componentes -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/native-components.js"></script>
  <script src="/js/main.js"></script>
  <script src="/js/menu-initializer.js"></script>
  <script src="/js/notifications.js"></script>
  <script src="/js/active-navigation.js"></script>
</body>
  <!-- Tu JS primero, para que el callback global exista antes de cargar el script de Google -->
  <script src="/js/tradux.js"></script>
  <!-- Script oficial de Google (callback definido en translate.js) -->
  <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</html>
