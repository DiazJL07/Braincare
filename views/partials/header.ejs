    /* Estilos para el menú hamburguesa izquierdo */
    .nav-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
    }

    .hamburger-menu-left {
      position: relative;
      display: flex;
      align-items: center;
      margin-right: 15px;
      z-index: 1001;
    }

    .hamburger-btn {
      background: none;
      border: none;
      cursor: pointer;
      padding: 8px;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      width: 30px;
      height: 30px;
      transition: all 0.3s ease;
    }

    .hamburger-btn:hover {
      transform: scale(1.1);
    }

    .hamburger-line {
      width: 25px;
      height: 3px;
      background-color: #ffffff;
      border-radius: 2px;
      transition: all 0.3s ease;
    }

    .hamburger-btn.active .hamburger-line:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
    }

    .hamburger-btn.active .hamburger-line:nth-child(2) {
      opacity: 0;
    }

    .hamburger-btn.active .hamburger-line:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
    }

    .hamburger-dropdown {
      position: absolute;
      top: 100%;
      left: 0;
      background: white;
      border-radius: 8px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
      min-width: 200px;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      z-index: 9999;
      border: 1px solid #e0e0e0;
      margin-top: 5px;
      display: block;
      pointer-events: none;
    }

    .hamburger-dropdown.show {
      opacity: 1 !important;
      visibility: visible !important;
      transform: translateY(0) !important;
      pointer-events: auto;
      display: block !important;
    }
    
    /* Estilo de depuración temporal */
    .hamburger-dropdown.show {
      background: #fff !important;
      border: 2px solid #007bff !important;
    }

    .hamburger-menu-content {
      padding: 8px 0;
    }

    .hamburger-item {
      display: flex;
      align-items: center;
      padding: 12px 16px;
      color: #333;
      text-decoration: none;
      transition: all 0.2s ease;
      border-bottom: 1px solid #f5f5f5;
    }

    .hamburger-item:last-child {
      border-bottom: none;
    }

    .hamburger-item:hover {
      background-color: #f8f9fa;
      color: #007bff;
      transform: translateX(5px);
    }

    .hamburger-item i {
      margin-right: 10px;
      width: 16px;
      text-align: center;
      font-size: 14px;
    }

    .hamburger-item span {
      font-size: 14px;
      font-weight: 500;
    }

